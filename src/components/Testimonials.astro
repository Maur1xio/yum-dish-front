.carousel-container {
    overflow: hidden;
    border-radius: 10px;
    position: relative;
    padding: 20px;
    width: 100vw;
}

.carousel {
    display: flex;
    width: 300%;
    animation: slide 30s infinite;
    transition: transform 0.5s ease-in-out;
}

.testimonial {
    position: relative;
    width: 13.33%;
    text-align: center;
    padding: 2em 4em;
    box-sizing: border-box;
    transition: background-color 0.1s ease-in-out, transform 0.3s ease-in-out;
    background-color: #fcecd5;
    margin: 0 10px;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 3em;
}

.testimonial:hover {
    background-color: #ffffff;
    box-shadow: 0 1px 8px #ffffff;

    transform: translateY(-10px);
}

.testimonial img {
    z-index: 2;
    position: relative;
    width: 120px;
    height: 120px;
    border-radius: 10px;
    object-fit: cover;
    margin-bottom: 15px;
}
.person-photo{
    position: relative;
}
.testimonial svg {
    position: absolute;
    z-index: 0;
    bottom:-3.5em;
    left: -4em;
    width: 230px;
    animation: blobAnimation 10s infinite ease-in-out;

}

.testimonial h3 {
    margin: 10px 0;
    color: #ff6600;
    font-size: 20px;
}

.testimonial p {
    position: relative;
    font-size: 14px;
    line-height: 1.5;
    color: #333;
}

@keyframes blobAnimation {
    0% {
        transform: scale(1.1) rotate(0deg);
    }
    25% {
        transform: scale(1.3) rotate(20deg);
    }
    50% {
        transform:  scale(1.2) rotate(30deg);
    }
    75% {
        transform:scale(1) rotate(20deg);
    }
    100% {
        transform:scale(1.1) rotate(0deg);
    }
}
@keyframes slide {
    0% { transform: translateX(0); }
    33% { transform: translateX(-33.33%); }
    66% { transform: translateX(-66.66%); }
    100% { transform: translateX(0); }
}

@media (max-width: 1100px) {

    .testimonial {
        flex-direction: column;
        min-width: 20%;
        padding: 2em;
    }
}
